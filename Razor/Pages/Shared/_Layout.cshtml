@{
   // Variables
   string yearMonthDay = DateTime.Now.ToString("yyyy-MM-dd");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Razor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Razor.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="~/images/generic_logo.png" alt="Generic Logo"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="date">
                            <p>Dagens datum är: <span>@yearMonthDay</span></p>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container nonflex">
        <ul class="sidebar">
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Start</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Razor">Razor</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/About">Om sidan</a>
          </li>
        </ul>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div>
            <p>Av Samuel Ward - Kontakta mig via e-post: <a href="mailto:sawa2005@student.miun.se">sawa2005@student.miun.se</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>